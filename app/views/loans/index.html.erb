<p id="notice"><%= notice %></p>

<section class="container mt-0 mb-5">
  <%= image_tag "logo_carniceria.png", class:"img-fluid", width: 950 %>
</section>

<section class="container mb-3 mt-2">
<h2 class="mb-4">Registro de Préstamos</h2>
  <form class="d-inline-flex my-lg-2" id="search">
    <input class="form-control mr-sm-4" type="search" placeholder="Buscar préstamos" aria-label="Search" name="q">
  </form>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
            <th class="text-center text-white">Nombre</th>
            <th class="text-center text-white">Apellido</th>
            <th class="text-center text-white">Total de préstamo</th>
            <th class="text-center text-white">Fecha</th>
            <th colspan="3"></th>
            </tr>
          </thead>

          <tbody id="loans">
            <%= render @loans%>
          </tbody>
        </table>
      </div>
    </div>
</section>
