<p id="notice"><%= notice %></p>

<section class="container mb-5 mt-2">
  <h2>Registro de Préstamos</h2>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
            <th class="text-center text-white">Nombre</th>
            <th class="text-center text-white">Apellido</th>
            <th class="text-center text-white">Total de préstamo</th>
            <th class="text-center text-white">Fecha</th>
            <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @loans.each do |loan| %>
              <tr>
                <td class="text-center"><%=loan.customer.name%></td>
                <td class="text-center"><%=loan.customer.last_name%></td>
                <td class="text-center"><%=loan.total_loan%></td>
                <td class="text-center"><%=loan.created_at%></td>
                <td class="text-center"><%= link_to 'Show', loan %></td>
                <td class="text-center"><%= link_to 'Edit', edit_loan_path(loan) %></td>
                <td class="text-center"><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</section>
