<p id="notice"><%= notice %></p>

<section class="container mb-5">
  <%= image_tag "logo_carniceria.png", class:"img-fluid", width: 950 %>
</section>

<section class="container mt-4">
  <h2 class="mb-4">Registro de Abonos</h2>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th class="text-white text-center">Nombre del Cliente</th>
            <th class="text-white text-center">Apellido</th>
            <th class="text-white text-center">Saldo Abonado</th>  
            <th class="text-white text-center">Fecha de Abono</th>  
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td class="text-center"><%= payment.customer.name %></td>
              <td class="text-center"><%= payment.customer.last_name %></td>
              <td class="text-center"><%= payment.balance_paid %></td>
              <td class="text-center"><%= payment.created_at %></td>
              <!--<td class="text-center"><%= link_to 'Show', payment %></td>-->
              <td class="text-center"><%= link_to 'Editar', edit_payment_path(payment) %></td>
              <td class="text-center"><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div> 
</section>