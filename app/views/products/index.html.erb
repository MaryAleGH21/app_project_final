<p id="notice"><%= notice %></p>

<body class="container mb-5 mt-1">
<div id="layoutAuthentication">
  <div id="layoutAuthentication_content">
      <main>
          <div class="container">
              <div class="row justify-content-center">
                  <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                      <div class="card-header"><%= image_tag "logo_carniceria.png", width: "200px", heigth: "800px", class: "img" %></div>
                        <div class="card-body">
                          <%= render 'form', product: @product%>                     
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<h2>Lista de Productos</h2>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th class="text-white text-center">Nombre del producto</th>  
              <th class="text-white text-center">Precio</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
            <%= render 'product', product: product %>
            <% end %>
          </tbody>
        </table> 
    </div>
  </div> 
</body>

