                                    </div>
                                    <div class="form-group">
                                      <label class="medium mb-1" for="inputPassword">Precio</label>
                                      <%= form.text_field :price, class:'form-control', placeholder: 'Precio' %>
                                    </div>
                                    <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                      <%= form.submit class: 'actions btn-new text-white', data: {disable_with: 'submitting...'} %>
                                    </div>
                                      <% end %>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
